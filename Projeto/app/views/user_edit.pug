extends layout

block content
  link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
  body.grid-container
    aside
      a(href="/main")
        img(src="/images/logo.png",width="150px")
      #lateral
        h3#selected 
          a(href="/user")=utilizador.nome
        h3 
          a(href="/cursos") Cursos
        h3
          a(href="/calendario") Calendário
        h3 
          a(href="/mensagens") Mensagens
        h3 
          a(href=`/ferramentas`) Ferramentas
        h3 
          a(href="/logout") Terminar Sessão
    main#menu
      #user-geral
        #user-foto
          if utilizador.foto != ""
            img(src="/fileStore/profile/" + utilizador.foto alt="logo")#logo
          else
            img(src="/images/no_profile2.png" alt="logo")#logo
        #user-info
          form(method="POST" enctype="multipart/form-data")
            #user-edit-group
              label id
              input(type="text" name="_id" value=utilizador._id readonly)
            #user-edit-group  
              label Nome
              input(type="text" name="nome" value=utilizador.nome)
            #user-edit-group
              label Foto
              input(type="file" name="foto" accept=".png")
            #user-edit-group
              label Categoria
              input(type="text" name="categoria" value=utilizador.categoria)
            #user-edit-group
              label Filiação
              input(type="text" name="filiacao" value=utilizador.filiacao)
            #user-edit-group
              label E-mail
              input(type="text" name="email" value=utilizador.email)
              button(type="submit") Submeter
    footer
      p Unidade Curricular: EngWeb 2023/24
      p Realizado por: Marco António Pereira Vieira e Luiz Felipe Passanezi Matteussi Rodrigues
