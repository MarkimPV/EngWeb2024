extends layout

block content
  .grid-container-login
    header(style="display: flex;justify-content: center;align-items: center;")
      img(src="/images/logo.png",width="200px")
    main
      .inputs
      form(method="POST")
        input.input(type="text" placeholder="Enter Username" name="_id" )
        if control.userAlreadyExists
            p.error Utilizador já Registado
        input.input(type="password" placeholder="Enter Password" name="pass")
        input.input(type="password" placeholder="Confirm Password" name="cpass")
        if control.differentPasswords
            p.error Passwords diferentes
        button.login_button(type="submit") Registar
        p Já possui conta?   
          a(href="/login") Login
    footer
      p Unidade Curricular: EngWeb 2023/24
      p Realizado por: Marco António Pereira Vieira e Luiz Felipe Passanezi Matteussi Rodrigues
  footer
