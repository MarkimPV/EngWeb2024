block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Compositor 
        = c._id
      p 
        a(href="/compositores") Return
    ul.w3.container.w3-ul.w3-card-4(style="width:50%")
      li 
        b Nome: 
        =c.nome
      li
        b Período: 
        a(href="/periodos/"+c.periodo)=c.periodoNome
      li 
        b Data de Nascimento: 
        =c.dataNasc
      li 
        b Data de Óbito: 
        =c.dataObito
      li 
