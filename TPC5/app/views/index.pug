extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Lista de Compositores #[a.w3-btn.w3-round.w3-grey(href="/compositores/registo") + ] [Total: #{clist.length}]
      p 
        a(href="/periodos") Periodos
    .w3-container
      table.w3-table-all
        tr
          th Id
          th Name
          th Per√≠odo
          th Actions
        
        each c in clist
          tr
            td= c.id
            td
              a(href="/compositores/"+c.id)= c.nome
            td
              a(href="/periodos/"+c.periodo.id)= c.periodo.nome
            td
              button.w3-btn.w3-round.w3-indigo.w3-margin-right 
                a(href="/compositores/edit/"+c.id) Edit
              button.w3-btn.w3-round.w3-indigo.w3-margin-right  
                a(href="/compositores/delete/"+c.id) Delete
              
    footer.w3-container.w3-teal
      h5 Generated by EngWeb2024 in #{d}
    