extends layout

block content
    .w3-card-4
        header.w3-container.w3-purple
            h2 Compositor Form
        
        form.w3-container(method="POST")
            fieldset
                legend Metadata
                label Id
                input.w3-input.w3-round(type="text" name="id")
                label Name
                input.w3-input.w3-round(type="text" name="nome")
                label Período
                input.w3-input.w3-round(list="periodos" name="periodo")
                datalist(id="periodos")
                    each val in ps
                        option(value= val.nome)
                label Data de Mascimento
                input.w3-input.w3-round(type="date" name="dataNasc")
                label Data de Óbito
                input.w3-input.w3-round(type="date" name="dataObito")
                label Descrição
                input.w3-input.w3-round(type="text" name="bio")

                        
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Add

        footer.w3-container.w3-purple
            h5 Generated by EngWeb2023 in #{d} - [#[a(href="/") Return]]
