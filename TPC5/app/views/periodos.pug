extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Lista de Per√≠odos #[a.w3-btn.w3-round.w3-grey(href="/periodos/registo") + ] [Total: #{plist.length}]
      p 
        a(href="/") Compositores
    .w3-container
      table.w3-table-all
        tr
          th Id
          th Name
          th Actions
        
        each p in plist
          tr
            td= p.id
            td
              a(href="/periodos/"+p.id)= p.nome
            td
              button.w3-btn.w3-round.w3-indigo.w3-margin-right 
                a(href="/periodos/edit/"+p.id) Edit
              button.w3-btn.w3-round.w3-indigo.w3-margin-right  
                a(href="/periodos/delete/"+p.id) Delete
              
    footer.w3-container.w3-teal
      h5 Generated by EngWeb2024 in #{d}
    